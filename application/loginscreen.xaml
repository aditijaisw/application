<Window x:Class="application.loginscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:application"
        mc:Ignorable="d"
        Title="loginscreen" Height="387" Width="528">
    <Border Background="#288dcd" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="User Login" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Foreground="Red" Margin="0,10"/>
            <Separator></Separator>
            <Label Content="UserName" HorizontalAlignment="Center" FontSize="18"/>
            <TextBox Height="50" Name="user" Background="white" Foreground="White" FontSize="18"/>
            <Label Content="Password" HorizontalAlignment="Center" FontSize="18"/>
            <PasswordBox Height="50" Name="password" Background="White" Foreground="White" FontSize="18"/>
            <Button Content="Submit" Click="Button_Click" Background="White" Margin="60,10" Foreground="Black" FontSize="20" />
        </StackPanel>
    </Border>
</Window>