<Window x:Class="application.sendCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:application"
        mc:Ignorable="d"
       Title="sendCode" Height="450" Width="800">
    <Grid>
        <TextBox Name="email" HorizontalAlignment="Left" Margin="150,65,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="333" Height="36"/>
        <Button FontSize="20" Background="white" Content="Send" HorizontalAlignment="Left" Margin="364,128,0,0" VerticalAlignment="Top" Width="119" Height="37" Click="Button_Click"/>
        <TextBox Name="code" HorizontalAlignment="Left" Margin="150,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="333" Height="36"/>
        <Button FontSize="20" Background="White" Content="Verify Code" HorizontalAlignment="Left" Margin="364,270,0,0" VerticalAlignment="Top" Width="119" Click="Button_Click_1"/>
    </Grid>
</Window>
